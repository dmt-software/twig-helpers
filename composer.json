{
  "name": "dmt-software/twig-helpers",
  "description": "Twig helper functions",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bas de Mes",
      "email": "bas@dmt-software.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "DMT\\Twig\\": "src/"
    }
  },
  "require": {
    "php": ">=7.4",
    "twig/twig": "^2.12|^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "DMT\\Test\\Twig\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": ">=8.5",
    "psr/http-client": "^1.0",
    "guzzlehttp/psr7": "^2.5"
  },
  "suggest": {
    "psr/http-client": "Enables PSR-7 related functionality like QuerystringMetadata"
  }
}
